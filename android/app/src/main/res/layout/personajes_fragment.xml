<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_marginTop="20dp"
        android:id="@+id/cabezera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/busqueda"
                app:layout_constraintEnd_toStartOf="@+id/lupa"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="0dp"/>

            <ImageButton
                android:id="@+id/lupa"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                app:layout_constraintStart_toEndOf="@+id/busqueda"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/lupa"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
    <ImageButton
        android:visibility="invisible"
        android:id="@+id/prevButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/flechaizquierda"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/nextButton"
        app:layout_constraintStart_toStartOf="@id/personajes_recycler"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="20dp"
       android:scaleType="centerCrop"
        />
    <!-- BotÃ³n de flecha derecha -->
    <ImageButton
        android:id="@+id/nextButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/flechaderecha"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/personajes_recycler"
        app:layout_constraintStart_toEndOf="@+id/prevButton"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="20dp"
        android:scaleType="centerCrop"
        />
    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="20dp"
        android:id="@+id/personajes_recycler"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@+id/cabezera"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/nextButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>


